<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgRvItemProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="18dp"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteY="41dp" />

    <TextView
        android:id="@+id/txtRvItemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toEndOf="@id/imgRvItemProfile"
        app:layout_constraintTop_toTopOf="@id/imgRvItemProfile"
        app:layout_constraintBottom_toTopOf="@+id/txtRvItemName"
        />

    <TextView
        android:id="@+id/txtRvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toStartOf="@id/txtRvItemId"
        app:layout_constraintTop_toBottomOf="@id/txtRvItemId"
        app:layout_constraintBottom_toBottomOf="@id/imgRvItemProfile"/>





</androidx.constraintlayout.widget.ConstraintLayout>